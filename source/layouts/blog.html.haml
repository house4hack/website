!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= "#{current_page.data.title} | House4Hack"
    -# %title
    -#   Blog Title#{' - ' + current_article.title unless current_article.nil?}
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

    = stylesheet_link_tag "application"
    %link{:href => 'http://fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', :rel => 'stylesheet', :type => 'text/css'}

  %body{class: page_classes}
    %header.navigation{:role => "banner"}
      = partial "shared/header"
    - if current_article.nil?
      = partial "shared/blog/header"
    %section.main{:role=>"main"}
      #blog-content
        = yield
      %aside#blog-sidebar
        = partial "shared/blog/aside"
    %footer.footer{:role => "contentinfo"}
      = partial "shared/footer"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
